
:root {
  --color-navbar-bg: #141a27;
  --color-nav-font: #fff;
  --color-nav-hover-bg: #555;
  --color-nav-hover-font: #fff;
  --color-main-bg: #141a27;
  --color-main-font: #fff;
  --color-code-bg: #d8d8d8;
  --color-header: #74dd9f;
  --font-family: 'arial', sans-serif;
}

body {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
}

#page-container {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: var(--color-main-bg);
}

/*----------- NAVIGATION BAR -----------*/

#navbar {
  position: fixed;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
  width: 250px;
  background-color: var(--color-navbar-bg);
  color: var(--color-nav-font);
}

nav header {
  font-size: 2rem;
  padding: 0 0.5em;
}

.nav-header {
  font-size: 1rem;
}

.nav-link {
  text-decoration: none;
  display: block;
  color: inherit;
  font-size: 1rem;
  padding: 0.5em 1em;
  font: var(--font-family);
}

  a:hover {
  background-color: var(--color-nav-hover-bg);
  color: var(--color-nav-hover-font);
}

/*----------- MAIN -----------*/

#main-doc {
  margin-left: 265px;
  display: flex;
  flex-direction: column;
  background-color: inherit;
  color: var(--color-main-font);
}

.main-section {
  display: flex;
  flex-direction: column;
  margin-bottom: 1em;
}

main header {
  font-size: 2rem;
}

header {
  margin-top: 1em;
  color: var(--color-header);
  font: var(--font-family);
}

section ul {
  margin-top: -0.25em;
}

section ul li {
  padding: 0.25em;
}

h1 {
  font: var(--font-family);
  font-size: 1.5rem;
}

h2 {
  font: var(--font-family);
  font-size: 1.1rem
}

/*----------- ENTRIES -----------*/

.entry {
  margin-top: 1em;
}

.function {
  padding: 0.5em 0em;
  margin-bottom: 0.75em;
  font-size: 1.25rem;
  font: var(--font-family);
}

/*----------- TABLES -----------*/

.grid-table {
  border-right: 1px solid;
  max-width: calc(80vw - 15em);
  display: grid;
  grid-template-columns: 1fr 1fr 3fr;
}

.table-header {
  border-top: 1px solid;
  font-weight: bold;
}

.grid-item {
  border-left: 1px solid;
  border-bottom: 1px solid;
  padding: 0.2em;
  font: var(--font-family);
}

.param-type {
  font: inherit;
}

.property-type {
  font: inherit;
}

.name {}
.type {}
.description {}

/*----------- MEDIA QUERIES -----------*/

/* On screens that are 700px or less */
@media screen and (max-width: 700px) {
  #navbar {
    width: 10em;
  }

  nav header {
    font-size: 1.3rem;
    padding: 0.5em 0.35em;
  }

  .nav-link {
    padding: 0.5em 0.65em;
  }

  #main-doc {
    margin-left: 11em;
  }

  main header {
    font-size: 1.3rem;
  }
}

/* On screens that are 550px or less */
@media screen and (max-width: 550px) {
  body {
    font-size: 0.8rem;
  }
}